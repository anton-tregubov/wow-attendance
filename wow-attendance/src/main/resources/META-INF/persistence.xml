<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="WoWAttendance">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>ru.faulab.attendence.store.Attendance</class>
        <class>ru.faulab.attendence.store.Character</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <!--
              if you don't have a database already created
              append ;create=true to end of the jdbc url
            -->
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:WoWAttendance;create=true"/>
            <property name="javax.persistence.jdbc.user" value="APP"/>

            <property name="show_sql" value="true"/>
            <property name="dialect" value="org.hibernate.dialect.DerbyTenSevenDialect"/>
        </properties>
    </persistence-unit>
</persistence>